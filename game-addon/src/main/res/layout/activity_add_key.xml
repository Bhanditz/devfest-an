<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".function.gameplay.ui.AddKeyActivity">


    <LinearLayout
        android:id="@+id/inputFields"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:paddingTop="@dimen/add_key_input_layout_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/inputView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/keyInputLeftPart"
                    style="@style/AppTheme.KeyWhite"
                    android:layout_width="@dimen/add_key_input_text_width"
                    android:layout_height="@dimen/add_key_input_text_height"
                    android:layout_marginEnd="@dimen/add_key_input_text_margin"
                    android:background="@color/green"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/keyInputRightPart"
                    style="@style/AppTheme.KeyWhite"
                    android:layout_width="@dimen/add_key_input_text_width"
                    android:layout_height="@dimen/add_key_input_text_height"
                    android:background="@color/green_unselected"
                    android:gravity="center"/>

            </LinearLayout>

            <TextView
                android:id="@+id/infoText"
                style="@style/AppTheme.TextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_key_react_text_margin"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <TextView
            android:text="sfsdfsdfsfsdf"
            android:id="@+id/reactMessageText"
            style="@style/AppTheme.TextWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_key_react_text_margin"
            android:gravity="center"/>

    </LinearLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/keyboardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:background="@color/black"
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/clearButton"
            android:columnCount="5"
            android:paddingTop="@dimen/input_keyboard_padding_top"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:rowCount="5">

            <!-- FIRST LINE -->

            <Button
                android:id="@+id/keyAButton"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="0"
                android:layout_marginBottom="@dimen/input_keyboard_button_margin_bottom"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="0"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="A"/>

            <Button
                android:id="@+id/keyBButton"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="1"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="0"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="B"/>

            <Button
                android:id="@+id/keyCButton"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="2"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="0"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="C"/>

            <Button
                android:id="@+id/keyDButton"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="3"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="0"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="D"/>

            <Button
                android:id="@+id/keyEButton"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="4"
                android:layout_row="0"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="E"/>

            <!-- SECOND LINE -->

            <Button
                android:id="@+id/keyFButton"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="0"
                android:layout_marginBottom="@dimen/input_keyboard_button_margin_bottom"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="1"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="F"/>

            <Button
                android:id="@+id/keyGButton"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="1"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="1"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="G"/>

            <Button
                android:id="@+id/keyHButton"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="2"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="1"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="H"/>

            <Button
                android:id="@+id/keyIButton"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="3"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="1"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="I"/>

            <Button
                android:id="@+id/keyJButton"
                style="@style/KeyboardText"
