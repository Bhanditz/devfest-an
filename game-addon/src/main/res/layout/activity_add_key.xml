                android:text="6"/>

            <Button
                android:id="@+id/key7Button"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="1"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="3"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="7"/>

            <Button
                android:id="@+id/key8Button"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="2"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="3"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="8"/>

            <Button
                android:id="@+id/key9Button"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="3"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="3"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="9"/>

            <Button
                android:text="0"
                android:id="@+id/key0Button"
                style="@style/KeyboardText"
                android:lineSpacingMultiplier="1.19"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:background="@color/background_color"
                android:layout_row="3"
                android:layout_column="4"/>

            <!--<Button-->
            <!--android:id="@+id/clearButton"-->
            <!--style="@style/AppTheme.TitleWhite"-->
            <!--android:layout_width="@dimen/input_keyboard_clear_button_width"-->
            <!--android:layout_height="@dimen/input_keyboard_clear_button_height"-->
            <!--android:layout_column="1"-->
            <!--android:layout_row="4"-->
            <!--android:layout_columnSpan="3"-->
            <!--android:background="@color/background_color"-->
            <!--android:text="@string/key_part_add.button.clear"-->
            <!--android:textAllCaps="true"/>-->
        </GridLayout>

        <Button
            android:id="@+id/clearButton"
            style="@style/AppTheme.TitleWhite"
            android:layout_width="@dimen/input_keyboard_clear_button_width"
            android:layout_height="@dimen/input_keyboard_clear_button_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/background_color"
            android:text="@string/key_part_add.button.clear"
            android:textAllCaps="true" />

        <!-- FIFTH LINE -->

        <!--<FrameLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="10"-->
        <!--&gt;-->

        <!--<Button-->
        <!--android:id="@+id/clearButton"-->
        <!--style="@style/AppTheme.TitleWhite"-->
        <!--android:layout_width="@dimen/input_keyboard_clear_button_width"-->
