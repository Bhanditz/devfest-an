                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="0"
                android:layout_marginBottom="@dimen/input_keyboard_button_margin_bottom"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="2"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="1"/>

            <Button
                android:id="@+id/key2Button"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="1"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="2"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="2"/>

            <Button
                android:id="@+id/key3Button"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="2"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="2"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="3"/>

            <Button
                android:id="@+id/key4Button"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="3"
                android:layout_marginRight="@dimen/input_keyboard_button_margin_right"
                android:layout_row="2"
                android:background="@color/background_color"
