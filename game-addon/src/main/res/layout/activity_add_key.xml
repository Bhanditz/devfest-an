                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
                android:layout_column="4"
                android:layout_row="2"
                android:background="@color/background_color"
                android:lineSpacingMultiplier="1.19"
                android:text="5"/>

            <!-- FOURTH LINE -->

            <Button
                android:id="@+id/key6Button"
                style="@style/KeyboardText"
                android:layout_width="@dimen/input_keyboard_button_width"
                android:layout_height="@dimen/input_keyboard_button_height"
