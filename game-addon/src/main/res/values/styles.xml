<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.TextWhite" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>

    </style>
    <style name="AppTheme.TextWhiteBold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="fontPath">fonts/courier_bl.ttf</item>
    </style>

    <style name="AppTheme.TitleWhite" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="AppTheme.KeyWhite" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_56</item>
    </style>

    <style name="AppTheme.TextGreen" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="AppTheme.TextGreenBold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontPath">fonts/courier_bl.ttf</item>
    </style>

    <style name="AppTheme.TitleGreenBold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size_26</item>
        <item name="fontPath">fonts/courier_bl.ttf</item>
    </style>

    <style name="AppTheme.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">91dp</item>
        <item name="android:paddingRight">91dp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontPath">fonts/courier_bl.ttf</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="KeyboardText">
        <item name="android:fontFamily">Courier</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">36sp</item>
    </style>



</resources>